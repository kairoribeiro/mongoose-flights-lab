<main>
    <h1><%= title %></h1>
    <form id="new-form" action="/flights" method="POST">
      <label for="airline-input">Airline:</label>
      <!-- <input type="text" name="airline" id="airline-input"> -->
      <select name='airline' id="airline-select">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>

      <label for="airport-input">Airport:</label>
      <select name='airport' id="airport-select">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>

      <label for="flightNo-input">Flight Number:</label>
      <input type="number" name="flightNo" id="flightNo-input" required>

      <label for="departs-input">Departs:</label>
      <input type="date" name="departs" id="departs-input">

      <!-- <input type="text" name="cast" id="cast-input">
      <label for="now-showing-checkbox">Now Showing:</label>
      <input type="checkbox" name="nowShowing" id="now-showing-checkbox" checked> -->
      <button type="submit">Add Flight</button>
    </form>
  </main>

